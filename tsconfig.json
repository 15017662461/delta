{
  "compilerOptions": {
    "declaration": true,
    "module": "ES5",
    "outDir": "dist/",
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "noEmitHelpers": true,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts"]
}
